{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@i18n/*": ["./i18n/*"],
      "@components/*": ["./app/components/*"],
      "@constants/*": ["./app/constants/*"],
      "@assets/*": ["./app/assets/*"],
      "@public/*": ["./public/*"],
      "@type/*": ["./app/types/*"],
      "@styles/*": ["./app/styles/*"],
      "@utils/*": ["./app/utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "translate/index.js"
  ],
  "exclude": ["node_modules"]
}
